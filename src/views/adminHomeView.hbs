<div class="row">
  <div class="col-md-12">
    <table id="book-table" class="table table-bordered table-striped">
      <thead>
        <th>Title</th>
        <th>Author</th>
      </thead>
      <tbody>
        {{#each books}}
          <tr>
            <td>{{title}}</td>
            <td>{{author}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
<script>
  $(function () {
    $('#book-table').DataTable();
  });
</script>