<!-- a book -->
<div class="row">
  <div class="col-md-12">
    <h2>Edit Book</h2>
    <p><em>Enter the book's goodreads ID number and click submit. The application will attempt to import data from goodreads.</em></p>
    <form class="form-inline">
      <div class="form-group">
        <label for="goodreads-id">goodreads Book ID:</label>
        <input type="text" class="form-control" id="goodreads-id" placeholder="ID">
      </div>
      <button type="submit" class="btn btn-primary">Import goodreads Data</button>
    </form>
    <hr>
    <form action="/admin/upsertbook" method="post">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Book Title">
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        <input type="text" class="form-control" id="author" name="author" placeholder="Book Author">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" rows="3" id="description" name="description"></textarea>
      </div>
      <div class="form-group">
        <label style="margin-right: 10px">Rate the Book:</label>
        <label class="radio-inline">
          <input type="radio" name="stars" id="stars-1" value="1">
          <i class="fa fa-star" aria-hidden="true"></i>
        </label>
        <label class="radio-inline">
          <input type="radio" name="stars" id="stars-2" value="2">
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
        </label>
        <label class="radio-inline">
          <input type="radio" name="stars" id="stars-3" value="3">
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
        </label>
        <label class="radio-inline">
          <input type="radio" name="stars" id="stars-4" value="4">
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
        </label>
        <label class="radio-inline">
          <input type="radio" name="stars" id="stars-5" value="5">
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
        </label>
      </div>
      <div class="form-group">
        <label for="description">Comments</label>
        <textarea class="form-control" rows="3" id="comments" name="comments"></textarea>
      </div>
      <hr>
      <button type="submit" class="btn btn-primary">Create Book Record</button>
    </form>
  </div>
</div>